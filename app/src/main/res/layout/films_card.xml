<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="4dp"
    android:paddingBottom="2dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_alignParentStart="true"
        android:id="@+id/film_poster"
        android:layout_width="90sp"
        android:layout_height="132sp" />

    <TextView
        android:id="@+id/film_text"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/film_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/film_director"
        android:textSize="12sp"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/film_poster"
        android:layout_below="@id/film_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/film_year"
        android:textSize="12sp"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/film_poster"
        android:layout_below="@id/film_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/film_runtime"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>